<p><%= link_to item.title, profile_show_path(item) %></p>
<p><%= item.subtitle %></p>
<p><%= item.body %></p>
<p><%= image_tag(item.thumb_image) unless item.thumb_image.nil? %></p>
<p><%= link_to "Edit", edit_profile_path(item) %></p>
<p><%= link_to "Delete Profile Item", profile_path(item), method: :delete, data: {confirm: "Are you sure?"} %></p>
